{{#if showUpdateForm}}
  <h4>Update Article: {{article.titleListView}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="titleListView">List View Title</label>
        {{input value=titleListView id="titleListView"}}
      </div>

      <div class="form-group">
        <label for="titleDetailView">Detail View Title</label>
        {{input value=titleDetailView id="titleDetailView"}}
      </div>

      <div class="form-group">
        <label for="category">Category</label>
        {{input value=category id="category"}}
      </div>

      <div class="form-group">
        <label for="timestamp">Date</label>
        {{input value=timestamp id="timestamp"}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="bodyCopy">Article Copy</label>
        {{input value=bodyCopy id="bodyCopy"}}
      </div>

      <div class="form-group">
        <label for="imageURL">Image URL</label>
        {{input value=imageURL id="imageURL"}}
      </div>

      <div class="form-group">
        <label for="listImageURL">Image URL</label>
        {{input value=listImageURL id="listImageURL"}}
      </div>

      <button {{action 'update' article}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'showUpdateForm'}}>Update Article</button>
{{/if}}
